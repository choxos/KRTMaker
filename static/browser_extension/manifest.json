{
  "manifest_version": 3,
  "name": "KRT Helper - Real-time RRID Suggestions",
  "version": "1.0.0",
  "description": "Provides real-time RRID suggestions and resource validation while writing scientific manuscripts",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  
  "host_permissions": [
    "https://scicrunch.org/*",
    "https://antibodyregistry.org/*",
    "*://localhost/*",
    "https://*.krt-maker.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://*.overleaf.com/*",
        "*://*.sharelatex.com/*",
        "*://docs.google.com/*",
        "*://*.notion.so/*",
        "*://*.manuscript.com/*",
        "*://*.editorialmanager.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "KRT Helper"
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "rrid_popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
